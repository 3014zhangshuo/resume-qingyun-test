<div class="col-md-8 col-md-offset-2">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :current_password, hint: "要输入当前密码才可以操作",label: "当前密码", required: true %>
    <%= f.input :password, autocomplete: "off", hint: "填入想要修改的密码", label: "修改的密码", required: false %>
    <%= f.input :password_confirmation, hint: "保持与上面的输入一致",label: "确认修改的密码",required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "提交" %>
  </div>
<% end %>
</div>
