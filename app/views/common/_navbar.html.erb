  <div class="wrap-main">
        <div class="row-wrp">
          <div class="container">

              <button data-toggle="collapse" class="navbar-toggle collapsed" type="button"> <span id="open-nav" class="open-nav"><i class="fa fa-bars"></i> Menu</span><span id="close-nav" class="hidden-xs"><i class="fa fa-times"></i> Close</span></button>
            <a href="/" class="navbar-brand"><%= image_tag "RHLogo_v1.png", style: "width:150px", alt: "ResumeHack", title: "ResumeHack" %></a>


            <div class="navbar-collapse collapse pull-right">
              <div class="row">
              <br>
              </div>
              <ul class="nav navbar-nav navbar-right nav-pills">
                <% if !current_user %>
                  <li><%#= link_to("注册", new_user_registration_path) %> </li>
                  <li><%#= link_to(content_tag(:i, '登入', class: 'fa fa-sign-in'), new_user_session_path) %></li>
                <% else %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                          <% if current_user.resumes.present? %>
                          <i class="fa fa-user-circle-o"></i>&nbsp;<%= current_user.resumes.first.name_resume %>
                          <% else %>
                          <i class="fa fa-user-circle-o"></i>&nbsp;<%= current_user.email %>
                          <% end %>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                       <li><%= link_to(content_tag(:i, "&nbsp;&nbsp;我的简历".html_safe, class: "fa fa-file-text-o"), user_resumes_path) %></li>
                    
             					 <% if current_user.admin? %>
                      	<li><%= link_to(content_tag(:i, "Admin 选单",class: "fa fa-users"), admin_users_path ) %></li>
                       <% end %>
                       <li class="divider"> </li>
                       <li> <%= link_to(content_tag(:i, '&nbsp;&nbsp;登出'.html_safe, class: 'fa fa-sign-out'), destroy_user_session_path, method: :delete) %> </li>
                    </ul>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <!--end lc-block-->
    </div>
